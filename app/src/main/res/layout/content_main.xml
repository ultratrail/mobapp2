<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:minWidth="20dp"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="teamtreehouse.com.iamhere.MainActivity"
    tools:showIn="@layout/activity_main">


    <TextView
        android:id="@+id/textViewNbMembre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_alignTop="@+id/seekBarNombreMembre"
        android:layout_marginLeft="25dp"
        android:layout_marginStart="25dp"
        android:layout_toEndOf="@+id/seekBarNombreMembre"
        android:layout_toRightOf="@+id/seekBarNombreMembre"
        android:width="40dp"
        android:text="1" />

    <Button
        android:id="@+id/goToMapActivity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"

        android:layout_centerHorizontal="true"
        android:text="Start" />

    <SeekBar
        android:id="@+id/seekBarNombreMembre"
        android:layout_width="138dp"
        android:layout_height="16dp"
        android:layout_alignBottom="@+id/textView"
        android:layout_marginLeft="19dp"
        android:layout_marginStart="19dp"
        android:layout_toEndOf="@+id/textView"
        android:layout_toRightOf="@+id/textView"
        android:max="10"
        android:progress="1" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/goToMapActivity"
        android:layout_marginTop="18dp"
        android:layout_toLeftOf="@+id/goToMapActivity"
        android:layout_toStartOf="@+id/goToMapActivity"
        android:text="Nombre de membres" />

    <Button
        android:id="@+id/goToBluetoothActivity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:text="Bluetooth" />


</RelativeLayout>
