<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:minWidth="20dp"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="teamtreehouse.com.iamhere.MainActivity"
    tools:showIn="@layout/activity_main">


    <Button

        android:id="@+id/goToGroupActivity"
        android:layout_width="500px"
        android:layout_height="150px"

        android:layout_below="@+id/goToBluetoothActivity"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="86dp"
        android:drawableLeft="@android:drawable/ic_menu_manage"
        android:text="Configurer un groupe" />

    <Button
        android:id="@+id/goToMapActivity"
        android:layout_width="wrap_content"
        android:layout_height="150px"

        android:layout_alignEnd="@+id/goToGroupActivity"
        android:layout_alignStart="@+id/goToGroupActivity"

        android:layout_below="@+id/goToGroupActivity"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="21dp"
        android:drawableLeft="@drawable/ic_launcher"
        android:text="Démarrer " />

    <Button
        android:id="@+id/creditButton"
        android:layout_width="wrap_content"
        android:layout_height="150px"
        android:layout_alignEnd="@+id/goToMapActivity"
        android:layout_alignStart="@+id/goToMapActivity"
        android:layout_below="@+id/goToMapActivity"
        android:layout_marginTop="21dp"
        android:drawableLeft="@android:drawable/ic_menu_help"
        android:text="Crédits" />

    <Button
        android:id="@+id/goToBluetoothActivity"
        android:layout_width="100px"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="13dp"
        android:layout_marginTop="19dp"
        android:layout_toStartOf="@+id/data_value_service"
        android:drawableLeft="@android:drawable/stat_sys_data_bluetooth" />

    <TextView
        android:id="@+id/data_value_service"
        android:layout_width="150px"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/goToBluetoothActivity"
        android:layout_alignBottom="@+id/goToBluetoothActivity"
        android:layout_alignParentEnd="true"
        android:text="@string/no_data"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/latitude2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/goToMapActivity"
        android:layout_marginTop="60dp"
        android:ems="10"
        android:inputType="numberSigned" />

    <EditText
        android:id="@+id/longitude"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/latitude2"
        android:layout_below="@+id/latitude2"
        android:layout_marginTop="44dp"
        android:ems="10"
        android:inputType="numberSigned" />

    <TextView
        android:id="@+id/latitude"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/longitude"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="39dp"
        android:layout_marginStart="11dp"
        android:text="Latitude" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/latitude"
        android:layout_below="@+id/latitude2"
        android:layout_marginTop="23dp"
        android:text="Longitude" />

    <Button
        android:id="@+id/valider"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/longitude"
        android:layout_marginTop="12dp"
        android:layout_toStartOf="@+id/goToMapActivity"
        android:text="valider" />


</RelativeLayout>
